{
  "name": "@nearai/ui",
  "version": "1.0.2",
  "description": "A React component library that implements the official NEAR AI design system.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nearai/ui.git"
  },
  "keywords": [
    "react",
    "component",
    "library",
    "theme",
    "near",
    "near-ai",
    "ui"
  ],
  "scripts": {
    "dev": "rollup -c -w",
    "build": "rollup -c",
    "format": "prettier --check ./src",
    "format:fix": "prettier --write ./src",
    "lint": "eslint \"**/*.{ts,tsx}\"",
    "lint:fix": "eslint \"**/*.{ts,tsx}\" --fix",
    "lint:strict": "eslint \"**/*.{ts,tsx}\" --max-warnings 0",
    "pre-commit": "npm run format && npm run lint:strict && npm run ts:check",
    "pre-publish": "npm run pre-commit && npm run test",
    "prepare": "husky",
    "repomix": "repomix --include 'src/**/*.ts,src/**/*.tsx,src/**/*.md'",
    "test": "vitest run",
    "test:watch": "vitest",
    "ts:check": "tsc --noEmit --incremental"
  },
  "engines": {
    "node": ">=18"
  },
  "files": [
    "dist"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./utils": {
      "types": "./dist/utils/index.d.ts",
      "import": "./dist/utils/index.js"
    },
    "./styles.css": {
      "import": "./dist/styles.css",
      "require": "./dist/styles.css"
    }
  },
  "peerDependencies": {
    "react": "^18 || ^19",
    "react-dom": "^18 || ^19",
    "zustand": "^5"
  },
  "dependencies": {
    "@phosphor-icons/react": "^2",
    "@radix-ui/colors": "^3",
    "@radix-ui/react-accordion": "^1",
    "@radix-ui/react-dialog": "^1",
    "@radix-ui/react-dropdown-menu": "^2",
    "@radix-ui/react-focus-scope": "^1",
    "@radix-ui/react-roving-focus": "^1",
    "@radix-ui/react-slider": "^1",
    "@radix-ui/react-switch": "^1",
    "@radix-ui/react-tabs": "^1",
    "@radix-ui/react-toast": "^1",
    "@radix-ui/react-tooltip": "^1",
    "downshift": "^9",
    "lodash-es": "^4",
    "next-themes": "^0.4",
    "repomix": "^0.3",
    "rollup-plugin-preserve-directives": "^0.4.0"
  },
  "devDependencies": {
    "@rollup/plugin-alias": "^5.1.1",
    "@rollup/plugin-commonjs": "^28.0.1",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.3.0",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.1",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/react": "^16.0.0",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^20",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@types/react-syntax-highlighter": "^15.5.13",
    "eslint": "^8",
    "eslint-config-next": "^14.2.5",
    "eslint-config-prettier": "^9",
    "eslint-plugin-simple-import-sort": "^12.1.0",
    "husky": "^9.1.3",
    "jsdom": "^24.1.1",
    "lint-staged": "^15.5.0",
    "next": "^15.0.2",
    "postcss": "^8.5.3",
    "postcss-preset-env": "^10.1.5",
    "postcss-scss": "^4.0.9",
    "prettier": "^3",
    "rollup": "^4.24.4",
    "rollup-plugin-add-directive": "^1.0.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-sass": "^1.15.2",
    "rollup-plugin-scss": "^4.0.1",
    "rollup-plugin-visualizer": "^5.12.0",
    "sass": "^1.86.0",
    "tslib": "^2.6.2",
    "typescript": "^5",
    "vitest": "^3.0.9"
  },
  "lint-staged": {
    "./src/**/*.{ts,tsx}": [
      "tsc --noEmit",
      "eslint --fix --max-warnings 0"
    ],
    "./src/**/*": [
      "prettier --write"
    ]
  }
}
